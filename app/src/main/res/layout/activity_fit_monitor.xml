<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="dpihealth.sk.miband.activities.FitMonitorActivity">


    <LinearLayout
        android:id="@+id/connectingLayout"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/touch_device"/>

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/loaderIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:indicatorName="BallScaleMultipleIndicator"
            android:layout_gravity="center"
            app:indicatorColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/deviceConnectState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/connecting_device"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/stepCounterLayout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/currentSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="0"/>


    </LinearLayout>


</LinearLayout>
